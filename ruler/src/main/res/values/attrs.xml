<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FancyRuler">
        <attr name="rulerPrimaryColor" format="color" />
        <attr name="rulerAccentColor" format="color" />
        <attr name="rulerBackgroundColor" format="color" />
        <attr name="rulerPointerOutlineColor" format="color" />
        <attr name="rulerPointerBackgroundColor" format="color" />
        <attr name="rulerPlaceValue" format="integer">
            <flag name="ones" value="1" />
            <flag name="twelves" value="12" />
            <flag name="tens" value="10" />
            <flag name="hundreds" value="100" />
            <flag name="thousands" value="1000" />
        </attr>
        <attr name="rulerMaxValue" format="integer" />
        <attr name="rulerMinValue" format="integer" />
        <attr name="rulerDigits" format="integer">
            <flag name="ten" value="10" />
            <flag name="twelve" value="12" />
        </attr>
        <attr name="defaultPosition" format="integer">
            <flag name="beginning" value="-1" />
            <flag name="middle" value="-2" />
            <flag name="end" value="-3" />
        </attr>
    </declare-styleable>
</resources>